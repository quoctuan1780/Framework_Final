@model CHAdmin.Models.loginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Client/Views/Shared/_LayoutMaster.cshtml";
}


<div class="inner-header">
    <div class="container">
        <div class="pull-left">
            @*<h6 class="inner-title">Đăng nhập</h6>*@
        </div>
        <div class="pull-right">
            <div class="beta-breadcrumb">
                <a href="/Client/Home/Index">Home</a> / <span>Đăng nhập</span>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<div class="container" style="padding-left:50px; padding-right:300px">
    <div id="content">

        <div class="row">
            <div class="col-sm-3"></div>

            @*@if (Session('loiLogin'))
                {
                    <div class="alert alert-dange">{{ Session('loiLogin') }}</div>
                }*@
            <div class="col-sm-6">
                @*<h4>Đăng nhập</h4>*@
                <div class="space20">&nbsp;</div>
                @if (Session["idKH"] != null)
                {
                    <div class="alert alert">Đăng nhập thành công</div>
                }
                @using (Html.BeginForm())
                {
                    if (Session["thongbao"] != null)
                    {

                        if ((string)Session["thongbao"] == "ok")
                        {
                            <div class="alert alert-success">@Session["thongbao"]</div>
                        }

                        if ((string)Session["thongbao"] == "fail")
                        {
                            <div class="alert alert-danger">@Session["thongbao"]</div>
                        }
                    }
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Đăng nhập</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-block">
						<label for="email">Email address*</label>
                        @Html.TextBoxFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", @type="email" } })
                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                </div>

                <div class="form-block">
                    <label for="phone">Password*</label>
                    @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>

                <div class="form-block">
                        <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
                <div class="form-block">
                    <a href="/Client/ForgotPassword/Index">Quên mật khẩu</a>
                </div>
            </div>
                }
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div> <!-- #content -->
</div> <!-- .container -->
